{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "Nossa biblioteca do curso de JS com TDD na pr√°tica",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/**/*.js",
    "test": "mocha src/**/*.spec.js --bail --require babel-register",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramonnteixeira/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Ramon Teixeira <ramon.nteixeira@gmail.com> (https://github.com/ramonnteixeira)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ramonnteixeira/js-tdd-course/issues"
  },
  "homepage": "https://github.com/ramonnteixeira/js-tdd-course#readme",
  "dependencies": {
    "eslint": "^5.9.0",
    "rambda": "^1.2.6",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "husky": "^1.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:coverage"
    }
  },
  "nyc": {
      "functions": 90,
      "lines": 90,
      "check-coverage": true,
      "reporter": ["text", "html"],
      "exclude": ["**/*.spec.js"]
  }
}
